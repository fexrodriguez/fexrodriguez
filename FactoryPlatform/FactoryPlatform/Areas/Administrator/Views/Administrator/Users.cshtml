@model List<UsersModel>
@{
    ViewData["Title"] = "Users administration";
    ViewData["Url"] = "Administrator > Register Users";
}

<div class="post d-flex flex-column-fluid" id="kt_post">
    <div id="kt_content_container" class="container-fluid">
        <div class="card shadow-sm" id="WorkOrdersPartial">

            <div class="card-header ">
                <div class="card-body p-3">
                    <form asp-controller="Administrator" asp-action="Users" method="post">
                        <div class="row">
                            <div class="col-lg-3 fv-row mb-4">
                                <label class="fs-6 form-label fw-bolder text-dark">Activos</label>
                                <select name="status" class="form-select form-select-sm form-select p-3 fs-8" data-control="select2" data-placeholder="-- Select an option --" data-allow-clear="true">
                                    <option></option>
                                    <option value="1">Anables</option>
                                    <option value="2">Disables</option>
                                </select>
                            </div>
                            <div class="col-lg-3 fv-row">
                                <label class="fs-6 form-label fw-bolder text-dark">Production departament</label>
                                <select name="departProductId" class="form-select form-select-sm form-select p-3 fs-8" data-control="select2" data-placeholder="-- View all Departments --" data-allow-clear="true">
                                    <option></option>
                                    @foreach (var item in (List<SelectListItem>)ViewData["ProductionDepartList"])
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-lg-3 fv-row mb-4 pt-8">
                                <button type="submit" id="Search" class="btn btn-primary p-3 fs-8 me-3"><i class="fas fa-search"></i>Search</button>
                                <a class="btn text-white fs-8 p-3" style="background-color:#44b6ae;"
                                   onmouseover="this.style.backgroundColor='#009999';" onmouseout="this.style.backgroundColor='#44b6ae';"
                                   data-bs-toggle="modal" data-bs-target="#kt_modal_Users">
                                    <i class="fa fa-plus text-white"></i>New User
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card-body ">
                <div class="card-body p-2">
                    <div class="card card-p-0 card-flush">
                        <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                            <div class="card-title">
                                <!--begin::Search-->
                                <div class="d-flex align-items-center position-relative my-1">
                                    <span class="svg-icon svg-icon-1 position-absolute ms-4"><i class="fas fa-search"></i></span>
                                    <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Search Report" />
                                </div>
                                <!--end::Search-->
                                <!--begin::Export buttons-->
                                <div id="kt_datatable_example_1_export" class="d-none"></div>
                                <!--end::Export buttons-->
                            </div>
                            <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                                <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                    <span class="svg-icon svg-icon-1 position-absolute ms-4"></span>
                                    export report
                                </button>
                                <div id="kt_datatable_example_1_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-200px py-4" data-kt-menu="true">
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="excel">
                                            export as excel
                                        </a>
                                    </div>
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="csv">
                                            export as csv
                                        </a>
                                    </div>
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="pdf">
                                            export as pdf
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table align-middle border rounded table-row-dashed fs-6 g-5" style="width:100%" id="kt_datatable_example_1">
                                <thead>
                                    <!--begin::Table row-->
                                    <tr class="text-start text-gray-700 fw-bolder fs-7 text-uppercase">
                                        <th class="align-middle border-bottom border-end min-w-15px">Id</th>
                                        <th class="align-middle border-bottom border-end min-w-15px">Edit</th>
                                        <th class="align-middle border-bottom border-end min-w-20px">User</th>
                                        <th class="align-middle border-bottom border-end min-w-150px">UserName</th>
                                        <th class="align-middle border-bottom border-end min-w-100px">Mail</th>
                                        <th class="align-middle border-bottom border-end min-w-125px">Job Position</th>
                                        <th class="align-middle border-bottom border-end  min-w-115px">Departament</th>
                                        <th class="align-middle border-bottom border-end  min-w-50px">Status</th>
                                    </tr>
                                    <!--end::Table row-->
                                </thead>
                                <tbody class="fw-bold text-gray-500">
                                    @{
                                        int id = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        var status = item.Status == true ? "Enable" : "Disable";
                                        var colorStatus = item.Status == true ? "badge-light-success" : "badge-light-danger";
                                        var UserName = $"{item.Nombres} {item.ApellidoPaterno} {item.ApellidoMaterno}";
                                        <tr>
                                            <td class="align-middle border-bottom border-end min-w-10px">
                                                @id
                                            </td>
                                            <td class="align-middle border-bottom border-end border-bottom min-w-10px">
                                                <button type="submit" class="btn btn-icon btn-active-light-warning w-30px h-30px ms-auto">
                                                    <i class="fas fa-pencil-alt fs-5"></i>
                                                </button>
                                            </td>
                                            <td class="align-middle border-bottom border-end min-w-20px">@item.Usuario</td>
                                            <td class="align-middle border-bottom border-end min-w-150px">@UserName</td>
                                            <td class="align-middle border-bottom border-end min-w-100px">@item.Correo</td>
                                            <td class="align-middle border-bottom border-end min-w-125px">@item.Descripcion</td>
                                            <td class="align-middle border-bottom border-end min-w-115px">@item.Departamento</td>
                                            <td class="align-middle border-bottom border-end min-w-50px">
                                                <div class="badge @colorStatus">@status</div>
                                            </td>
                                        </tr>
                                        id++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


