    <!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="bg-body" background="~/Images/SystemPictures/newLogo3.png" bgcolor=aqua>

    @if (Model.Feasibility != null)
    {
        <div class="d-flex flex-column flex-root">
            <div class="d-flex flex-column flex-column-fluid">
                <div class="d-flex flex-column flex-column-fluid p-10 py-lg-15">

                    @if (Model.Feasibility.DigitalDocumentsFeasibility.Count > 0)
                    {
                        var feasibility = @Model.Feasibility.DigitalDocumentsFeasibility.First();

                        if (feasibility.TipoDoc == 1)
                        {
                            <div class="mw-lg-950px mx-auto w-100">
                                <div class="d-flex justify-content-between flex-column flex-sm-row mb-5">
                                    <img alt="Logo" src="~/Images/SystemPictures/logo-lkq_3.png" width="250" height="80" />
                                    <div class="my-1 text-end fs-5">
                                        <strong>Fecha: </strong>@feasibility.Fecha<br>
                                        <strong>Proyecto: </strong>@feasibility.Proyecto <br>
                                        <strong>Ingeniero de producto:</strong> @feasibility.Ing<br>
                                    </div>
                                </div>
                                <div class="separator my-1 mb-2"></div>
                                <br>

                                <h1 class="card-title fs-1qx p-2 text-center me-2">HOJA DE FACTIBILIDAD</h1>
                                <p class="fs-5 mb-5">
                                    Nuestro equipo de desarrollo de producto, ha considerado las siguientes situaciones. Todas las respuestas “NO” son soportadas
                                    con comentarios adjuntos, identificando los aspectos y/o cambios propuestos para permitir a la organización cumplir con los
                                    requerimientos del sistema de gestión de calidad.
                                </p>

                                <h3 class="mb-1">Factibilidad Operativa</h3>
                                <table class="table table-row-bordered table-rounded border gy-7 gs-7 fs-6 mb-10">
                                    <tr class="fw-bolder text-uppercase gs-0 border-bottom border-end border-gray-300 fs-5">
                                        <th class="border-bottom border-end align-middle p-1">SI</th>
                                        <th class="border-bottom border-end align-middle p-1 text-center">NO</th>
                                        <th class="border-bottom border-end align-middle p-1 text-center">CONSIDERACION</th>
                                    </tr>
                                    @foreach (var item in Model.Feasibility.DigitalDocumentsFeasibility.Where(F => F.Tipo == 1).ToList())
                                    {
                                        <tr class="fs-6">
                                            @if (item.Opcion == true)
                                            {
                                                <td class="border-bottom border-end p-1 align-middle text-center"><i class="fas fa-check-square text-success fs-1"></i> </td>
                                                <td class="border-bottom border-end p-1 align-middle text-center"> </td>
                                            }
                                            else
                                            {
                                                <td class="border-bottom border-end p-1 align-middle text-center"> </td>
                                                <td class="border-bottom border-end p-1 align-middle text-center"> <i class="fas fa-check-square text-danger fs-1"></i> </td>
                                            }
                                            <td class="border-bottom border-end p-1 align-middle">@item.Question</td>
                                        </tr>
                                    }

                                </table>

                                <h3 class="mb-1">Factibilidad Técnica</h3>
                                <table class="table table-row-bordered table-rounded border gy-7 gs-7 fs-6 mb-10">
                                    <tr class="fw-bolder text-uppercase gs-0 border-bottom border-end border-gray-300 fs-5">
                                        <th class="border-bottom border-end align-middle p-1">SI</th>
                                        <th class="border-bottom border-end align-middle p-1 text-center">NO</th>
                                        <th class="border-bottom border-end align-middle p-1 text-center">CONSIDERACION</th>
                                    </tr>
