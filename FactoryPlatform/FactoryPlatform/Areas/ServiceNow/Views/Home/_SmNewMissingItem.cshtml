                            <div class="col-lg-3 fv-row">
                                <div class="position-relative d-flex align-items-center">
                                    <span class="svg-icon svg-icon-2 position-absolute mx-4"><i class="fas fa-calendar-alt fs-3"></i></span>
                                        <input id="DateMissingNMI" name="DateMissingNMI"  class="form-control form-control ps-12 p-3 fs-8" placeholder="Select a date of the missing" />
                                </div>
                            </div>
