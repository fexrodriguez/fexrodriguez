                        </div>
                        <div class="row mb-6">
                            <label class="col-lg-3 col-form-label required fw-bold fs-6">Code ATK: </label>
                            <div class="col-lg-3 fv-row">
                                <select id="ATKCodeNMI" name="ATKCodeNMI" class="form-select form-select-sm form-select p-3 fs-8" data-control="select2" data-placeholder="-- Select a Code ATK--" data-allow-clear="true">
                                    <option></option>
                                    @*@foreach (var item in Model)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }*@
                                </select>
                            </div>
                        </div>
                          <div class="row mb-6">
                            <label class="col-lg-3 col-form-label required fw-bold fs-6">Item Code: </label>
                            <div class="col-lg-3 fv-row">
                                <input type="text" id="ItemCodeNMI" name="ItemCodeNMI" class="form-control p-3 fs-8" placeholder="Item Code" />
