                        <div class="row mb-6">
                            <label class="col-lg-3 col-form-label required fw-bold fs-6">Departament: </label>
                            <div class="col-lg-3 fv-row">
                                <select id="DepartamentNMI" name="DepartamentNMI" class="form-select form-select-sm form-select p-3 fs-8" data-control="select2" data-placeholder="-- Select a Departament--" data-allow-clear="true">
                                    <option></option>
                                    @*@foreach (var item in Model)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }*@
                                </select>
                            </div>
                        </div>
                        <div class="row mb-6">
                            <label class="col-lg-3 col-form-label required fw-bold fs-6">Reported By: </label>
                            <div class="col-lg-3 fv-row">
                                <input type="text" id="ReportedByNMI" name="ReportedByNMI" class="form-control p-3 fs-8" disabled/>
                            </div>
