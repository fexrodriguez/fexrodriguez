                        <div class="row mb-6">
                            <label class="col-lg-3 col-form-label required fw-bold fs-6">Coordinador: </label>
                            <div class="col-lg-3 fv-row">
                                <select id="CoordinadorNMI" name="CoordinadorNMI" class="form-select form-select-sm form-select p-3 fs-8" data-control="select2" data-placeholder="-- Select a Coordinador--" data-allow-clear="true">
                                    <option></option>
                                    @*@foreach (var item in Model)
                                    {
